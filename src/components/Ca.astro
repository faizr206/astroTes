---
interface Props {
    title: string;
    desc:string;
}

const { title, desc } = Astro.props;
---

<div class="card bg-slate-800 w-[90%] m-2 shadow-xl">
  <figure>
    <img
      src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
      alt="Shoes" />
  </figure>
  <div class="card-body">
    <h2 class="card-title hover:tracking-widest transition-all duration-100">{title}</h2>
    <p>{desc}</p>
    <div class="card-actions justify-end">
      <button class="btn btn-primary">Buy Now</button>
    </div>
  </div>
</div>